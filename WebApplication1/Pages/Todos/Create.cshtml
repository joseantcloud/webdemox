@page
@model WebApplication1.Pages_Todos.CreateModel

@{
    ViewData["Title"] = "Nueva tarea";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">

        <div class="d-flex align-items-center justify-content-between mb-3">
            <div>
                <h1 class="h3 mb-1">Nueva tarea</h1>
                <div class="text-muted">Creá una tarea y asignale una fecha límite si querés.</div>
            </div>
            <a class="btn btn-outline-secondary" asp-page="./Index">Volver</a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <form method="post" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="TodoItem.Title" class="form-label">
                            Título <span class="text-danger">*</span>
                        </label>
                        <input asp-for="TodoItem.Title"
                               class="form-control"
                               placeholder="Ej: Estudiar EF Core + PostgreSQL"
                               autocomplete="off"
                               required />
                        <div class="form-text">Máximo 200 caracteres.</div>
                        <span asp-validation-for="TodoItem.Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="TodoItem.DueAtUtc" class="form-label">Fecha límite</label>
                        <input asp-for="TodoItem.DueAtUtc"
                               type="datetime-local"
                               class="form-control" />
                        <div class="form-text">
                            Se guardará en UTC en la base de datos.
                        </div>
                        <span asp-validation-for="TodoItem.DueAtUtc" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-4">
                        <input class="form-check-input" asp-for="TodoItem.IsDone" />
                        <label class="form-check-label" asp-for="TodoItem.IsDone">
                            Marcar como completada
                        </label>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            Crear tarea
                        </button>
                        <a class="btn btn-outline-secondary" asp-page="./Index">
                            Cancelar
                        </a>
                    </div>

                </form>
            </div>
        </div>

        <div class="mt-3 text-muted small">
            Tip: Si la tarea no tiene fecha límite, dejá el campo vacío.
        </div>

    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}